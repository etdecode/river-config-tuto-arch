riverctl map normal $mod Return spawn foot
#!/bin/zsh

# Mod key (Super/Windows key)
mod="Mod4"

# set environment
export XDG_CURRENT_DESKTOP=River
export XDG_SESSION_DESKTOP=River
export XDG_SESSION_TYPE=wayland

# start waybar
waybar &

# Basic key bindings
riverctl map normal $mod Return spawn foot
riverctl map normal $mod+Shift Q exit

# window management
riverctl map normal $mod J focus-view next
riverctl map normal $mod K focus-view previous
riverctl map normal $mod+Shift J swap next
riverctl map normal $mod+Shift K swap previous

# layout management
riverctl map normal $mod Space toggle-float
riverctl map normal $mod F toggle-fullscreen

# tag management

for i in $(seq 1 9); do
    tag_keys=("1" "2" "3" "4" "5" "6" "7" "8" "9")
    riverctl map normal $mod ${tag_keys[$((i-1))]} set-focused-tags $((1 << (i-1)))
    riverctl map normal $mod+Shift ${tag_keys[$((i-1))]} set-view-tags $((1 << (i-1)))
    riverctl map normal $mod+Control ${tag_keys[$((i-1))]} toggle-focused-tags $((1 << (i-1)))
    riverctl map normal $mod+Shift+Control ${tag_keys[$((i-1))]} toggle-view-tags $((1 << (i-1)))
done

# Use built-in layout
riverctl default-layout stack

